<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="@drawable/main_background">
	tools:context=".MainActivity">

	<TextView
		android:layout_width="match_parent"
		android:layout_height="22dp"
		android:layout_marginLeft="5dp"
		android:layout_marginTop="20dp"
		android:text="\t\tВведите авторов:"
		android:textColor="@color/colorWhiteUser"
		android:textStyle="bold" />

	<EditText
		android:id="@+id/authors_text"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:ems="10"
		android:inputType="textPersonName"
		android:textColorHint="@color/coral"
		android:textColor="@color/colorWhiteUser"
		android:hint="Скарлат Д.М., Конюхов Р.В., ... Савельев К.Г"
		android:textSize="15dp"
		android:layout_marginLeft="19dp"
		android:layout_marginRight="19dp"/>

	<TextView
		android:id="@+id/name_of_article"
		android:layout_width="match_parent"
		android:layout_height="22dp"
		android:layout_marginLeft="5dp"
		android:layout_marginTop="10dp"
		android:text="\t\tВведите название статьи:"
		android:textColor="@color/colorWhiteUser"
		android:textStyle="bold" />

	<EditText
		android:id="@+id/article_text"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:ems="10"
		android:inputType="textPersonName"
		android:textColorHint="@color/orange"
		android:hint="Получение углерода хитропопным способом"
		android:textColor="@color/dark_orange"
		android:textSize="15dp"
		android:layout_marginLeft="19dp"
		android:layout_marginRight="19dp"/>

	<TextView
		android:id="@+id/journal"
		android:layout_width="match_parent"
		android:layout_height="22dp"
		android:layout_marginLeft="5dp"
		android:layout_marginTop="20dp"
		android:text="\t\tВведите название журнала:"
		android:textColor="@color/colorWhiteUser"
		android:textStyle="bold" />

	<EditText
		android:id="@+id/journal_text"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:ems="10"
		android:inputType="textPersonName"
		android:hint="Успехи в химии..."
		android:textColorHint="@color/orange_red"
		android:textColor="@color/indian_red"
		android:textSize="15dp"
		android:layout_marginLeft="19dp"
		android:layout_marginRight="19dp"/>

	<TextView
		android:id="@+id/year"
		android:layout_width="match_parent"
		android:layout_height="22dp"
		android:layout_marginLeft="5dp"
		android:layout_marginTop="0dp"
		android:background="@android:color/transparent"
		android:text="\t\tВведите год издания:"
		android:textColor="@color/colorWhiteUser"
		android:textStyle="bold" />

	<EditText
		android:id="@+id/year_text"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:ems="10"
		android:inputType="textPersonName"
		android:hint="2020"
		android:textColorHint="@color/light_sea_green"
		android:textColor="@color/colorWhiteUser"
		android:textSize="15dp"
		android:layout_marginLeft="19dp"
		android:layout_marginRight="180dp"/>

	<TextView
		android:id="@+id/publisher"
		android:layout_width="match_parent"
		android:layout_height="22dp"
		android:layout_marginLeft="5dp"
		android:layout_marginTop="0dp"
		android:background="@android:color/transparent"
		android:text="\t\tВведите название издательства:"
		android:textColor="@color/colorWhiteUser"
		android:textStyle="bold" />

	<EditText
		android:id="@+id/publisher_text"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:ems="10"
		android:inputType="textPersonName"
		android:hint="ХИМПРОМ"
		android:textColorHint="@color/light_goldenrod_yellow"
		android:textColor="@color/colorWhiteUser"
		android:textSize="15dp"
		android:layout_marginLeft="19dp"
		android:layout_marginRight="20dp"/>

	<TextView
		android:id="@+id/pages"
		android:layout_width="match_parent"
		android:layout_height="22dp"
		android:layout_marginLeft="5dp"
		android:layout_marginTop="0dp"
		android:background="@android:color/transparent"
		android:text="\t\tВведите страницы из журнала:"
		android:textColor="@color/colorWhiteUser"
		android:textStyle="bold" />

	<EditText
		android:id="@+id/pages_text"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:ems="10"
		android:inputType="textPersonName"
		android:hint="40 - 44"
		android:textColorHint="@color/light_blue"
		android:textColor="@color/colorWhiteUser"
		android:textSize="15dp"
		android:layout_marginLeft="19dp"
		android:layout_marginRight="220dp"/>

	<EditText
		android:id="@+id/result_text"
		style="@android:style/Widget.DeviceDefault.Light.AutoCompleteTextView"
		android:layout_width="373dp"
		android:layout_height="51dp"
		android:layout_marginLeft="19dp"
		android:layout_marginTop="10dp"
		android:layout_marginRight="220dp"
		android:background="#5C90A8"
		android:ems="10"
		android:hint="  Результат будет здесь"
		android:isScrollContainer="true"
		android:shadowColor="@color/indian_red"
		android:shadowDx="@android:integer/config_mediumAnimTime"
		android:text=""
		android:textColor="#17E2C4"
		android:textColorHint="#FFFFFF"
		android:textSize="15dp" />

	<Button
		android:id="@+id/my_button"
		android:layout_width="300dp"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:layout_marginTop="20dp"
		android:gravity="center_horizontal|center_vertical"
		android:onClick="onClick"
		android:outlineAmbientShadowColor="@color/light_goldenrod_yellow"
		android:outlineSpotShadowColor="@color/light_sea_green"
		android:text="Сгенерировать" />


</LinearLayout>